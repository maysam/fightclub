<p id="notice"><%= notice %></p>

<div style="display: flex; justify-content: space-between;">
  <h1>Weapons</h1>
  <%= link_to 'New Weapon', new_weapon_path, class: 'btn btn-primary', style: 'height: intrinsic' %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Points</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @weapons.empty? %>
      <tr><td colspan="8">No weapons or shields add yet!</td></tr>
    <% end %>
    <% @weapons.each do |weapon| %>
      <tr>
        <td><%= weapon.name %></td>
        <td><%= weapon.points %></td>
        <td>
          <span class="label label-<%= weapon.weapon_type == Weapon::WEAPON ? 'danger' : 'warning' %>">
            <%= weapon.weapon_type %>
          </span>
        </td>
        <td><%= link_to 'Show', weapon %></td>
        <td><%= link_to 'Edit', edit_weapon_path(weapon) %></td>
        <td><%= link_to 'Destroy', weapon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Weapon', new_weapon_path, class: 'btn btn-primary', style: 'height: intrinsic' %>
