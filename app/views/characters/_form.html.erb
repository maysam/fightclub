<%= form_with(model: character, local: true, class: '') do |form| %>
  <% if character.errors.any? %>
    <div id="error_explanation">
        <ul>
            <% character.errors.full_messages.each do |message| %>
            <div class="alert alert-danger">
                <%= message %>
            </div>
            <% end %>
        </ul>
    </div>
  <% end %>
  <div class="field form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="field form-group">
      <%= form.label :life_point %>
      <%= form.text_field :life_point, class: 'form-control' %>
  </div>
  <div class="field form-group">
      <%= form.label :attack_point %>
      <%= form.text_field :attack_point, class: 'form-control' %>
  </div>
  <div class="field form-group">
      <%= form.label :defence_point %>
      <%= form.text_field :defence_point, class: 'form-control' %>
  </div>
  <div class="actions">
      <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
