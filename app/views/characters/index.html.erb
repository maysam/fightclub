<p id="notice"><%= notice %></p>

<h1>Characters</h1>

<table class="table">
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Name</th>
      <th>Life point</th>
      <th>Attack point</th>
      <th>Defence point</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @characters.empty? %>
      <tr><td colspan="8">No character available</td></tr>
    <% end %>
    <% @characters.each do |character| %>
      <tr>
        <td><img src="<%= character.avatar %>" /></td>
        <td><%= character.name %></td>
        <td><%= character.life_point %></td>
        <td><%= character.attack_point %></td>
        <td><%= character.defence_point %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

